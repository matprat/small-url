<%= form_with(model: paste, local: true) do |form| %>
  <% if paste.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Alert!</h4>
      <p><%= pluralize(paste.errors.count, "error") %> prohibited this paste from being saved:</p>
      <ul>
        <% paste.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <hr>
      <p class="mb-0">You must enter valid information before you can continue.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :expiration_length_in_minutes %>
    <%= form.number_field :expiration_length_in_minutes, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control', rows: 25 %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Cancelar', root_path, class: 'btn btn-light', role: 'button' %>
  </div>
<% end %>
